# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build realtime-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t realtime-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system realtime-server && \
    adduser --system -G realtime-server realtime-server

COPY dist/packages/realtime-server realtime-server
RUN chown -R realtime-server:realtime-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix realtime-server --omit=dev -f install

CMD [ "node", "realtime-server" ]
